.wrapper{
  padding:1em;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:1em;
  border:2rpx solid #999;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 4rpx #eee;
  width:100%;
  box-sizing: border-box;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 1em
}
.contactButton{
  font-size:24rpx;
  width:6em !important;
  padding:0.8em 0.5em;
  background: transparent;
  border:none;
  margin-right:0 !important;
}
.contentWrapper{
  width:100%;
}
.container{
  padding:0;
}
.canvas{
  width:100vw;
  height:400px;
}
.diaryWrapper{
  padding:2em 1em;
}
.title{
  margin:1em 0.5em;
}
.tab{
  border:2rpx solid #999;
  border-radius: 8rpx;
  margin:0.8em;
  padding:0.5em;
  box-shadow: 0 4rpx 4rpx #eee;
  display: flex;
  flex-direction: column;
}
.date{
  border-bottom:2rpx dashed #999;
  width:5.5em;
  padding:0.5em 0;
  margin-left:0.5em;
  text-align: center;
}
.content{
  padding:0.5em;
  word-break: break-all
}
.buttonWrapper{
  display: flex;
  justify-content: center;
  margin:1em 0;
}
.typeButton{
  background: transparent;
  width:6em !important;
  padding:0.5em !important;
  margin:0.5em !important;
  font-size:24rpx;
  border:2rpx solid #999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tips{
  display: flex;
  justify-content: center;
  align-items: center;
  padding:2em;
  margin-top:4em;
}