.wrapper{
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding:0.5em 1em;
}
.head{
  display: flex;
  flex-direction: space-around;
  justify-content: center;
  align-items: center;
  height:4em;
}
.feeling{
  padding:0.5em;
  border-radius: 50%;
  margin-left:1em;
}
.feeling.active{
  border:2rpx solid #999;
  box-shadow: 0 4rpx 4rpx #999;
  box-sizing:border-box;
}
.textarea{
  border: 1rpx solid #999;
  border-radius: 8rpx;
  padding:1em;
  width: 100%;
  height: 50%;
  box-sizing:border-box;
  box-shadow: 0 8rpx 8rpx #999
}
.buttonWrapper{
  display: flex;
  margin:2em 1em;
}
.button{
  background: transparent;
  border:2rpx solid #999;
  padding:0.5em 0.8em;
  margin:0 1em;
  color:#333;
  font-size: 24rpx;
}
.changeTime{ 
  padding:0.5em;
}